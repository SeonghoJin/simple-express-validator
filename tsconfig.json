{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@body": ["src/body"],
      "@decorators": ["src/decorators"],
      "@error": ["src/error"],
      "@types": ["src/types"],
      "@util": ["src/util"],
      "@context": ["src/validator/context"],
      "@raw": ["src/validator/raw"],
      "@symbol": ["src/symbol"]
    },
    "target": "es6",
    "lib": [
      "es2016",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node" ,
   "resolveJsonModule": true,
    "declaration": true ,
    "outDir": "./dist" ,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true ,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"]
}
